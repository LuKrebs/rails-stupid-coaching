<div class="container-fluid">
  <div class="container">

    <div class="row ask">
      <div class="col-xs-12 col-sm-4 col-sm-offset-3">
        <div class="card">
          <div class="card-footer">
            <h4><%= @ask %></h4>
            <p>- You</p>
            <div class="controls">
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row answer">
      <div class="col-xs-12 col-sm-4 col-sm-offset-5">
        <div class="card">
          <div class="card-footer">
            <h4><%= @answer %></h4>
            <p>- Your coach</p>
            <div class="controls">
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="text-center">
        <%= link_to "+ Ask new question", ask_path %>
      </div>
    </div>
  </div>
</div>


